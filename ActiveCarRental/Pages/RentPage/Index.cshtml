@page
@model ActiveCarRental.Pages.RentPage.IndexModel


<p>
    <h3>All Rental cars available</h3>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].RegisterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].CarType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RentalCars) {
     @if(Model.HasReturndDate(item))
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarType)
            </td>
            <td>
                <a asp-page="./Rent Car" asp-route-id="@item.RegisterId">Rent</a> |
                <a asp-page="./Car Details" asp-route-id="@item.RegisterId">Details</a> |
            </td>
        </tr>
}}
    </tbody>
</table>

<p>
    <h3>All Rental cars that are used</h3>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].RegisterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].CarType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RentalCars) {
     @if(!Model.HasReturndDate(item))
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarType)
            </td>
            <td>
                <a asp-page="./Return Car" asp-route-id="@item.RegisterId">ReturnCar</a> |
                <a asp-page="./Car Details" asp-route-id="@item.RegisterId">Details</a> |
            </td>
        </tr>
}}
    </tbody>
</table>

<p>
    <h3>All bookings</h3>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarBookings[0].TimeRented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarBookings[0].TimeReturned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarBookings[0].KilometerReading)
            </th>

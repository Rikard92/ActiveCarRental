            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarBookings[0].Register)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarBookings[0].Kost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CarBookings) {
           
               <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeRented)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeReturned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KilometerReading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FirstName)

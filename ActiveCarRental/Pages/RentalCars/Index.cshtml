@model ActiveCarRental.Pages.RentalCars.IndexModel

@{
    ViewData["Title"] = "Cars";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].RegisterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalCars[0].CarType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RentalCars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarType)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.RegisterId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.RegisterId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
